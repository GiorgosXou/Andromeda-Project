' Finish screen of device tests.

Event PrevButton.Click()
  StartTests.PrevTest()
End Event

Event ExitButton.Click()
  Finish()
End Event

$Properties
$Source $Form
$Define FinishTests $As Form
  Layout = 1
  Layout.Orientation = 1
  $Define TopPanel $As Panel
    Layout = 1
    Layout.Orientation = 0
    BackgroundColor = &HFF000000
    Width = -2
    $Define PrevButton $As Button
      Text = "Previous"
    $End $Define
    $Define ExitButton $As Button
      Text = "Exit"
    $End $Define
  $End $Define
  $Define InstructionsLabel $As Label
    Text = "... and that finishes the components smoke test."
  $End $Define
$End $Define
$End $Properties
